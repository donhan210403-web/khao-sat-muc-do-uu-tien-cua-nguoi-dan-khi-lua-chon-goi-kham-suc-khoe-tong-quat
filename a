<script>
  // üîó ƒê·ªîI 2 LINK FORM ·ªû ƒê√ÇY
  const formA = "https://forms.gle/LDvWaQFUwotD4RfD8";
  const formB = "https://forms.gle/H67DMEuTQJ37r6TC7";

  function showIntention() {
    document.getElementById("intention").classList.remove("hidden");
  }

  function stopSurvey() {
    document.getElementById("stopMessage").classList.remove("hidden");
